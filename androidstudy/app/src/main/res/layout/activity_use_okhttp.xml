<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.MyOkHttpActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <Button
        android:id="@+id/btn_http_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSyncClick"
        android:text="@string/http_sync_request"
        android:textSize="@dimen/btn_txt_size_16sp"
        />

    <Button
        android:id="@+id/btn_http_async_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAsyncGetClick"
        android:text="@string/http_async_get_request"
        android:textSize="@dimen/btn_txt_size_16sp"
        />

    <Button
        android:id="@+id/btn_http_async_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAsyncPostClick"
        android:text="@string/http_async_post_request"
        android:textSize="@dimen/btn_txt_size_16sp"
        />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>